@model IEnumerable<NewRLWeb.Models.Academic_Exchange>

@{
    ViewBag.Title = "List";
    //Layout = "~/Views/Shared/_Manage.cshtml";
}
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AcademicName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Abstract)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Coverage)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.BeginTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndTime)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Link)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*@Html.DisplayFor(modelItem => item.AcademicName)*@
                @UIHelper.StrSub(item.AcademicName, 15)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Abstract)*@
                @UIHelper.StrSub(item.Abstract,25)                
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Coverage)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.BeginTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Link)
            </td>*@
            <td>
                @Ajax.ActionLink("编辑", "Edit", "Academic", new { id = item.AcademicID }, new AjaxOptions() { UpdateTargetId = "mainContent", HttpMethod = "Get", OnBegin = "active", InsertionMode = InsertionMode.Replace }) |
                @Ajax.ActionLink("详情", "Details", "Academic", new { id = item.AcademicID }, new AjaxOptions() { UpdateTargetId = "mainContent", HttpMethod = "Get", OnBegin = "active", InsertionMode = InsertionMode.Replace }) |
                @Ajax.ActionLink("删除", "Delete", "Academic", new { id = item.AcademicID }, new AjaxOptions() { UpdateTargetId = "mainContent", HttpMethod = "Get", OnBegin = "active", InsertionMode = InsertionMode.Replace })
            </td>
        </tr>
    }

</table>
