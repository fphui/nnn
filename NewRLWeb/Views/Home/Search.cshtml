<!DOCTYPE html>
@{
    ViewBag.Title = "HomePage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Content/news_style.css" rel="stylesheet" />
    <link href="~/Content/News/Index.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

</head>

<body>
    <!--2017.01.18-->
    <!--2017.2.24-->
    <div class="container" style="width:1140px;">
        <div class="col-md-2 column sider-list">
            @*<aside>*@
            @*<div class="dropdown-menu-left">*@
            <div class="titalu">
                <h2 class="heading">
                    <span>搜索结果</span>
                </h2>
            </div>
            @*<ul id="main-nav" class="nav nav-tabs nav-stacked">*@
            <ul id="main-nav">
                <li role="presentation">
                    @Html.ActionLink("新闻动态", "SearchNews", new { Type = "新闻" })
                </li>
                <li role="presentation">
                    @Html.ActionLink("通知公告", "SearchNotice", new { Type = "通知" })
                </li>
            </ul>
            @*</div>*@
            @*</aside>*@
        </div>
        <div class="col-md-10 column" style="min-height:500px;">
            @RenderBody()
        </div>
    </div>
</body>
</html>
