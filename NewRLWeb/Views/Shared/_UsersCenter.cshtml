
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Users/Index.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
@using (Html.BeginForm())
    {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="users">
        <h1 class="usertitle">个人中心</h1>
        <div class="row">
            <div class="userinfo-nav col-md-2" style="padding-left:0px; padding-right:0px;">
                <div class="headphoto">
                    <img src=@Model.Photo_Address style="height:100px;width:100px;" />
                    <div class="alterPhoto">
                        @Html.ActionLink("修改头像", "ChengePhoto", new { id = @Model.UserID })
                    </div>
                </div>
                <ul class="nav nav-stacked">
                    <li class="active">
                        <a href="/Users/Index">查看个人信息</a>
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    </li>
                    <li role="presentation">
                        @Html.ActionLink("修改个人信息", "Edit", new { id = @Model.UserID })
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    </li>
                    <li role="presentation">
                        <a href="/Album/Photos">个人相册</a>
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    </li>
                </ul>
            </div>
            <div class="info col-md-10">
                @RenderBody()
            </div>
        </div>
    </div>
}
</body>
</html>
